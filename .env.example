# ===================================
# PRESERVING CONNECTIONS - ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# DATABASE (REQUIRED)
# ===================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Examples:
#   Local: postgresql://postgres:password@localhost:5432/preserving_connections
#   Neon: postgresql://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/neondb
#   Supabase: postgresql://postgres:pass@db.project.supabase.co:5432/postgres
DATABASE_URL="postgresql://username:password@localhost:5432/preserving_connections"

# PostgreSQL connection details (auto-populated if using DATABASE_URL)
PGHOST="localhost"
PGUSER="your_username"
PGPASSWORD="your_password"
PGDATABASE="preserving_connections"
PGPORT="5432"

# ===================================
# AUTHENTICATION (REQUIRED)
# ===================================
# Supabase project credentials
# Get these from: https://app.supabase.com/ → Your Project → Settings → API
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# ===================================
# AI PROVIDERS (AT LEAST ONE REQUIRED)
# ===================================
# OpenAI API Key (Recommended)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-..."

# Anthropic API Key (Alternative to OpenAI)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-..."

# ===================================
# EMAIL SERVICE (OPTIONAL)
# ===================================
# Resend API Key - for sending emails (welcome, notifications, password reset)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_..."

# Admin email - receives partner application and waitlist notifications
ADMIN_EMAIL="admin@yourdomain.com"

# ===================================
# WEB SCRAPING (OPTIONAL)
# ===================================
# ScrapingBee API Key - for parsing obituaries from funeral home websites
# Get from: https://www.scrapingbee.com/
SCRAPINGBEE_API_KEY="your_scrapingbee_api_key"

# ===================================
# OBJECT STORAGE (OPTIONAL)
# ===================================
# Google Cloud Storage or AWS S3 bucket for file uploads
DEFAULT_OBJECT_STORAGE_BUCKET_ID="your_bucket_id"
PUBLIC_OBJECT_SEARCH_PATHS="public"
PRIVATE_OBJECT_DIR=".private"

# ===================================
# REPLIT-SPECIFIC (AUTO-POPULATED IN REPLIT)
# ===================================
# These are automatically set in Replit environment
# REPLIT_DEPLOYMENT=1
# REPLIT_DOMAINS=your-app.replit.app
# REPLIT_DEV_DOMAIN=your-app.replit.dev
